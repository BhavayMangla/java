package com.company;

public class Main {

    public static void main(String[] args) {
        int highscoreposition= highscorecalculater(1500);
        displayhighscoreposition( "Bhavay", 2);


    }
    public static void displayhighscoreposition(String playername, int position){
        System.out.println(playername+" managed to get position " + position + " on the high score table");
    }
    public static int highscorecalculater(int score){
        if (score>1000)
        {return 1;
        }
        else
            if (score>500&&score<1000){
                return 2;
            }
            else if (score>100&&score<500){
                return 3;
            }
            else
            return 4;

    }

}
